@model Cesit


<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            @Html.Partial("_AdminSidebar")
            <div class="col-lg-8 ftco-animate fadeInUp ftco-animated">
                <h2>Ürün Çeşidi Düzenle</h2>

                <form asp-action="CesitEdit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CesitId" />

                    <div class="form-group">
                        <label asp-for="Ad"></label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CesitMetin"></label>
                        <textarea asp-for="CesitMetin" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="CesitMetin" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div> <!-- .col-md-8 -->


    </div>
    </div>
</section>