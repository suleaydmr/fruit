@model Sehir

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            @Html.Partial("_AdminSidebar")
            <div class="col-lg-8 ftco-animate fadeInUp ftco-animated">
                <h2>Yeni Şehir Ekle</h2>

                <form asp-action="CityCreate" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Ad"></label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UretimOrani"></label>
                        <input asp-for="UretimOrani" class="form-control" />
                        <span asp-validation-for="UretimOrani" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div> <!-- .col-md-8 -->


    </div>
    </div>
</section>