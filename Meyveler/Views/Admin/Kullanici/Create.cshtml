@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            @Html.Partial("_AdminSidebar")
            <div class="col-lg-8 ftco-animate fadeInUp ftco-animated">
                <h2>Yeni Kullanıcı Ekle</h2>

                <form asp-action="KullaniciCreate" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PasswordHash" class="control-label">Parola:</label>
                        <input type="password" asp-for="PasswordHash" class="form-control" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>

                <div>
                    <a asp-action="KullaniciIndex">Geri dön</a>
                </div>
            </div>
        </div> <!-- .col-md-8 -->
    </div>
</section>
