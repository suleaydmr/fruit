@model Meyve

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            @Html.Partial("_AdminSidebar")
            <div class="col-lg-8 ftco-animate fadeInUp ftco-animated">
                <h2>Kısa Tanıtım Metni</h2>

                <form asp-action="EditDescription" method="post">
                    <input type="hidden" asp-for="MeyveId" />

                    <div class="form-group">
                        <label asp-for="Ad">Başlık:</label>
                        <input asp-for="Ad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="TanitimMetni">Tanıtım Metni:</label>
                        <textarea asp-for="TanitimMetni" class="form-control" rows="10"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div> <!-- .col-md-8 -->


    </div>
    </div>
</section>